<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/MyCardViewStyle">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_step_description"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/add_information_item_buttons_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_text_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:text="@string/text"/>

            <Button
                android:id="@+id/add_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:text="@string/image"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_step_confirmation"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/add_confirmation_item_buttons_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_simple_answer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:text="@string/none"/>

            <Button
                android:id="@+id/add_text_answer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:text="@string/text"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>